{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@screens": ["./src/screens"],
      "@types/*": ["./src/types/*"],
      "@types": ["./src/types"],
      "@utils/*": ["./src/utils/*"],
      "@store/*": ["./src/store/*"],
      "@themes": ["./src/themes"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]
}
